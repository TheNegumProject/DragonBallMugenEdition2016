; Definition file for player
; Contains all the filenames needed for the character

; Player information
[Info]
name = "Son Goku"        ;Name of character
displayname = "Goku" ;Name of character to display
versiondate =    ;Version date of character
mugenversion =1.0   ;Version of M.U.G.E.N character works on
author = "boryema"      ;Character author name
pal.defaults = 1,4,2,5,3,6,7,10,8,11,9,12 ;Default palettes in order of preference

; Files for the player
[Files]
cmd     = goku.cmd   ;Command set
cns     = goku.cns   ;Constants
st      = states/system.st   ;States
st1 =  states/normal.st
st2 =  states/specials.st
st3 =  states/supers.st
st4 =  states/helpers.st
st5 =  states/custom.st
stcommon = common1.cns ;Common states
sprite  = goku.sff   ;Sprite
anim    = goku.air   ;Animation
sound  = goku.snd   ;Sound
pal1   = pals/goku1.act   ;Palettes (can have up to 12)
pal2   = pals/vegeta1.act
pal3   = pals/piccolo.act
pal4   = pals/goku2.act
pal5   = pals/vegeta2.act
pal6   = pals/piccolo2.act
pal7   = pals/kaioken.act
pal8   = pals/cvs.act
pal9   = pals/broly1
pal10  = pals/deepdramatic.act
pal11  = pals/ssg.act
pal12  = pals/ssgss.act
